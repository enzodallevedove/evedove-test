<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">

    <system>
        <tab id="evedove" translate="label" sortOrder="10">
            <label>Signativa</label>
        </tab>
        <section id="evedove_test" showInDefault="1">
            <tab>evedove</tab>
            <label>Test</label>
            <resource>Evedove_Test::config</resource>
